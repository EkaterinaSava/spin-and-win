      },
      {
        image: 'winners-gothic',
        game: 'Ghotic',
        amount: '185.00$',
        name: 'PlayerName'
      }
    ]
  each winner in winners  
    a.slider-winners__slide(href="#")
      .slider-winners__slide-image
        img.slider-winners__slide-image-img(src="resources/img/"+ winner.image +".png")
